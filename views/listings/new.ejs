<div% layout("/layouts/boilerplate") %>
  <body>
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings">
      <div>
      <label for="title" class="form-label">Title</label>
      <input name="listing[title]" placeholder="enter title" type="text" class="form-control" />
    </div>
      
    <div>
      <label for="description" class="form-label">Description</label>
      <textarea
        name="listing[description]"
        class="form-control"
      ></textarea>
      </div>
    
      <div>
        <label for="image" class="form-label">Image</label>
      <input
        name="listing[image]"
        placeholder="enter image URL/Link"
        type="text"
        class="form-control"
      />
      </div>
      
      
      <div>
        <label for="price" class="form-label">Price</label>
      <input name="listing[price]" placeholder="enter price" type="number" class="form-control"/>
      
      </div>

      <div>
        <label for="country" class="form-label">country</label>
      <input name="listing[country]" placeholder="enter country" type="text" class="form-control" />
      </div>

      <div>
        <label for="location" class="form-label">location</label>
      <input
        name="listing[location]"
        placeholder="enter location"
        type="text"
      />
      </div>
      <button class="btn btn-dark">Add</button>
    </form>
  </body>
